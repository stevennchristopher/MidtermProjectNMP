<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Following">

  <ScrollView
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:fillViewport="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="-12dp"
        tools:layout_editor_absoluteY="13dp">

      <ImageView
          android:id="@+id/topBar"
          android:layout_width="412dp"
          android:layout_height="65dp"
          android:scaleType="centerCrop"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:srcCompat="@drawable/top_app_bar" />

      <ImageView
          android:id="@+id/navBar"
          android:layout_width="412dp"
          android:layout_height="99dp"
          android:layout_marginStart="24dp"
          android:scaleType="centerCrop"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="1.0"
          app:layout_constraintStart_toStartOf="parent"
          app:srcCompat="@drawable/navbar" />

      <TextView
          android:id="@+id/txtCerbung"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="116dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="116dp"
          android:fontFamily="@font/roboto_medium"
          android:text="Following"
          android:textColor="#000000"
          android:textSize="20sp"
          app:layout_constraintEnd_toStartOf="@+id/icon_notif"
          app:layout_constraintHorizontal_bias="0.569"
          app:layout_constraintStart_toEndOf="@+id/icon_hamburg"
          app:layout_constraintTop_toTopOf="parent" />

      <ImageView
          android:id="@+id/icon_hamburg"
          android:layout_width="35dp"
          android:layout_height="42dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="12dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:srcCompat="@drawable/hamburger_icon" />

      <ImageView
          android:id="@+id/icon_notif"
          android:layout_width="35dp"
          android:layout_height="42dp"
          android:layout_marginTop="12dp"
          android:layout_marginEnd="16dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:srcCompat="@drawable/notif_icon" />

      <ImageView
          android:id="@+id/icon_home"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="24dp"
          android:layout_marginBottom="40dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:srcCompat="@drawable/home_icon" />

      <ImageView
          android:id="@+id/icon_create"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="24dp"
          android:layout_marginEnd="24dp"
          android:layout_marginBottom="40dp"
          app:layout_constraintBottom_toBottomOf="@+id/navBar"
          app:layout_constraintEnd_toStartOf="@+id/icon_users"
          app:layout_constraintStart_toEndOf="@+id/icon_following"
          app:srcCompat="@drawable/create_icon" />

      <ImageView
          android:id="@+id/icon_users"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="28dp"
          android:layout_marginBottom="40dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toStartOf="@+id/icon_prefs"
          app:srcCompat="@drawable/user_icon" />

      <ImageView
          android:id="@+id/icon_prefs"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="24dp"
          android:layout_marginBottom="40dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:srcCompat="@drawable/prefs_icon" />

      <TextView
          android:id="@+id/textFollowing"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="22dp"
          android:layout_marginTop="8dp"
          android:fontFamily="@font/roboto_medium"
          android:text="Following"
          android:textColor="#000000"
          android:textStyle="normal"
          app:layout_constraintStart_toEndOf="@+id/textHome"
          app:layout_constraintTop_toBottomOf="@+id/icon_following" />

      <ImageView
          android:id="@+id/icon_following"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="28dp"
          android:layout_marginBottom="40dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toEndOf="@+id/icon_home"
          app:srcCompat="@drawable/following_icon" />

      <TextView
          android:id="@+id/textHome"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="27dp"
          android:layout_marginTop="8dp"
          android:fontFamily="@font/roboto_medium"
          android:text="Home"
          android:textColor="#000000"
          android:textStyle="normal"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/icon_home" />

      <TextView
          android:id="@+id/txtPrefs"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="29dp"
          android:fontFamily="@font/roboto_medium"
          android:text="Prefs"
          android:textColor="#000000"
          android:textStyle="normal"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/icon_prefs" />

      <TextView
          android:id="@+id/textCreate"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="24dp"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="38dp"
          android:fontFamily="@font/roboto_medium"
          android:text="Create"
          android:textColor="#000000"
          android:textStyle="normal"
          app:layout_constraintEnd_toStartOf="@+id/txtUsers"
          app:layout_constraintHorizontal_bias="0.744"
          app:layout_constraintStart_toEndOf="@+id/textFollowing"
          app:layout_constraintTop_toBottomOf="@+id/icon_create" />

      <TextView
          android:id="@+id/txtUsers"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="37dp"
          android:fontFamily="@font/roboto_medium"
          android:text="Users"
          android:textColor="#000000"
          android:textStyle="normal"
          app:layout_constraintEnd_toStartOf="@+id/txtPrefs"
          app:layout_constraintTop_toBottomOf="@+id/icon_users" />

    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>