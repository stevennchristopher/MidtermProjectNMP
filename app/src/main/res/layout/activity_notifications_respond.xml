<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationsRespond">

  <ImageView
      android:id="@+id/topBar"
      android:layout_width="412dp"
      android:layout_height="65dp"
      android:scaleType="centerCrop"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/top_app_bar" />

  <TextView
      android:id="@+id/txtCerbung"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="116dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="116dp"
      android:fontFamily="@font/roboto_medium"
      android:text="Respond"
      android:textColor="#000000"
      android:textSize="20sp"
      app:layout_constraintEnd_toStartOf="@+id/icon_notif"
      app:layout_constraintStart_toEndOf="@+id/icon_back"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/icon_notif"
      android:layout_width="35dp"
      android:layout_height="42dp"
      android:layout_marginTop="12dp"
      android:layout_marginEnd="16dp"
      app:layout_constraintEnd_toEndOf="@+id/topBar"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/notif_icon" />

  <ImageView
      android:id="@+id/icon_back"
      android:layout_width="35dp"
      android:layout_height="42dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="12dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/back_icon" />

  <ScrollView
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="65dp"
      android:fillViewport="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="-12dp"
        tools:layout_editor_absoluteY="13dp">

      <TextView
          android:id="@+id/txtDescription4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:fontFamily="@font/roboto_regular"
          android:text="bluby82 wants to\ncontribute in"
          android:textAlignment="center"
          android:textSize="16sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/imageView3" />

      <ImageView
          android:id="@+id/imageView3"
          android:layout_width="364.8sp"
          android:layout_height="210sp"
          android:layout_marginTop="64dp"
          android:scaleType="fitCenter"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:srcCompat="@drawable/rectangle" />

      <TextView
          android:id="@+id/txtLatestPost3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="107dp"
          android:layout_marginTop="5dp"
          android:layout_marginEnd="106dp"
          android:fontFamily="@font/roboto_regular"
          android:text="Latest post: 09/09/2023"
          app:layout_constraintEnd_toEndOf="@+id/imageView3"
          app:layout_constraintStart_toStartOf="@+id/imageView3"
          app:layout_constraintTop_toBottomOf="@+id/txtDetails3" />

      <TextView
          android:id="@+id/txtDetails3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="85dp"
          android:layout_marginTop="5dp"
          android:layout_marginEnd="85dp"
          android:fontFamily="@font/roboto_regular"
          android:text="209 Likes | 3 Cerbungs Created"
          app:layout_constraintEnd_toEndOf="@+id/imageView3"
          app:layout_constraintStart_toStartOf="@+id/imageView3"
          app:layout_constraintTop_toBottomOf="@+id/txtUsername3" />

      <TextView
          android:id="@+id/txtUsername3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="157dp"
          android:layout_marginTop="25dp"
          android:layout_marginEnd="158dp"
          android:fontFamily="@font/roboto_regular"
          android:text="bluby82"
          app:layout_constraintEnd_toEndOf="@+id/imageView3"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="@+id/imageView3"
          app:layout_constraintTop_toBottomOf="@+id/imgUser4" />

      <ImageView
          android:id="@+id/imgUser4"
          android:layout_width="120sp"
          android:layout_height="120sp"
          android:layout_marginTop="12dp"
          android:scaleType="fitCenter"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:srcCompat="@drawable/profile_pic" />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>