<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReadRestrictActivity">

  <ImageView
      android:id="@+id/topBar"
      android:layout_width="wrap_content"
      android:layout_height="70dp"
      android:scaleType="centerCrop"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/top_app_bar" />

  <TextView
      android:id="@+id/txtTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/roboto_medium"
      android:text="Read Public"
      android:textColor="#000000"
      android:textSize="18sp"
      app:layout_constraintBottom_toBottomOf="@+id/topBar"
      app:layout_constraintEnd_toStartOf="@+id/btnNotif"
      app:layout_constraintStart_toEndOf="@+id/btnMenu"
      app:layout_constraintTop_toTopOf="@+id/topBar" />

  <ImageButton
      android:id="@+id/btnMenu"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:backgroundTint="#F2ECF6"
      app:layout_constraintBottom_toBottomOf="@+id/topBar"
      app:layout_constraintStart_toStartOf="@+id/topBar"
      app:layout_constraintTop_toTopOf="@+id/topBar"
      app:srcCompat="@drawable/icon_menu" />

  <ImageButton
      android:id="@+id/btnNotif"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:backgroundTint="#F2ECF6"
      app:layout_constraintBottom_toBottomOf="@+id/topBar"
      app:layout_constraintEnd_toEndOf="@+id/topBar"
      app:layout_constraintTop_toTopOf="@+id/topBar"
      app:srcCompat="@drawable/icon_notif" />

  <ImageView
      android:id="@+id/navBar"
      android:layout_width="0dp"
      android:layout_height="70dp"
      android:scaleType="centerCrop"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:srcCompat="@drawable/navbar" />

  <ImageButton
      android:id="@+id/btnHome"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="4dp"
      android:backgroundTint="#F2ECF6"
      app:layout_constraintStart_toStartOf="@+id/navBar"
      app:layout_constraintTop_toTopOf="@+id/navBar"
      app:srcCompat="@drawable/icon_home" />

  <ImageButton
      android:id="@+id/btnFollowing"
      android:layout_width="48dp"
      android:layout_height="43dp"
      android:layout_marginStart="32dp"
      android:layout_marginTop="4dp"
      android:backgroundTint="#F2ECF6"
      android:scaleType="fitCenter"
      app:layout_constraintStart_toEndOf="@+id/btnHome"
      app:layout_constraintTop_toTopOf="@+id/navBar"
      app:srcCompat="@drawable/icon_following" />

  <ImageButton
      android:id="@+id/btnCreate"
      android:layout_width="48dp"
      android:layout_height="43dp"
      android:layout_marginStart="36dp"
      android:layout_marginTop="4dp"
      android:backgroundTint="#F2ECF6"
      android:scaleType="fitCenter"
      app:layout_constraintEnd_toStartOf="@+id/btnUser"
      app:layout_constraintHorizontal_bias="0.025"
      app:layout_constraintStart_toEndOf="@+id/btnFollowing"
      app:layout_constraintTop_toTopOf="@+id/navBar"
      app:srcCompat="@drawable/icon_create" />

  <ImageButton
      android:id="@+id/btnUser"
      android:layout_width="48dp"
      android:layout_height="43dp"
      android:layout_marginTop="4dp"
      android:layout_marginEnd="32dp"
      android:backgroundTint="#F2ECF6"
      android:scaleType="fitCenter"
      app:layout_constraintEnd_toStartOf="@+id/btnPrefs"
      app:layout_constraintTop_toTopOf="@+id/navBar"
      app:srcCompat="@drawable/icon_user" />

  <ImageButton
      android:id="@+id/btnPrefs"
      android:layout_width="48dp"
      android:layout_height="43dp"
      android:layout_marginTop="4dp"
      android:layout_marginEnd="16dp"
      android:backgroundTint="#F2ECF6"
      android:scaleType="fitCenter"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/navBar"
      app:srcCompat="@drawable/icon_prefs" />

  <TextView
      android:id="@+id/txtBtnHome"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:fontFamily="@font/roboto_medium"
      android:text="Home"
      android:textColor="#000000"
      app:layout_constraintEnd_toEndOf="@+id/btnHome"
      app:layout_constraintStart_toStartOf="@+id/btnHome"
      app:layout_constraintTop_toTopOf="@+id/navBar" />

  <TextView
      android:id="@+id/txtBtnFollowing"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:fontFamily="@font/roboto_medium"
      android:text="Following"
      android:textColor="#000000"
      app:layout_constraintEnd_toEndOf="@+id/btnFollowing"
      app:layout_constraintStart_toStartOf="@+id/btnFollowing"
      app:layout_constraintTop_toTopOf="@+id/navBar" />

  <TextView
      android:id="@+id/txtBtnCreate"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="3dp"
      android:layout_marginTop="40dp"
      android:fontFamily="@font/roboto_medium"
      android:text="Create"
      android:textColor="#000000"
      app:layout_constraintEnd_toEndOf="@+id/btnCreate"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="@+id/btnCreate"
      app:layout_constraintTop_toTopOf="@+id/navBar" />

  <TextView
      android:id="@+id/txtBtnUsers"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:fontFamily="@font/roboto_medium"
      android:text="Users"
      android:textColor="#000000"
      app:layout_constraintEnd_toEndOf="@+id/btnUser"
      app:layout_constraintStart_toStartOf="@+id/btnUser"
      app:layout_constraintTop_toTopOf="@+id/navBar" />

  <TextView
      android:id="@+id/txtBtnPrefs"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:fontFamily="@font/roboto_medium"
      android:text="Prefs"
      android:textColor="#000000"
      app:layout_constraintEnd_toEndOf="@+id/btnPrefs"
      app:layout_constraintStart_toStartOf="@+id/btnPrefs"
      app:layout_constraintTop_toTopOf="@+id/navBar" />

  <ScrollView
      android:id="@+id/scrollView"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:fillViewport="true"
      app:layout_constraintBottom_toTopOf="@+id/navBar"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/topBar"
      app:layout_constraintVertical_bias="0.0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <TextView
          android:id="@+id/txtCharacters"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="2dp"
          android:layout_marginEnd="15dp"
          android:text="(60 of 70 characters)"
          android:textSize="12sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/txtInputLayoutSearch" />

      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/txtInputLayoutSearch"
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
          android:layout_width="0dp"
          android:layout_height="100dp"
          android:layout_marginStart="15dp"
          android:layout_marginTop="12dp"
          android:layout_marginEnd="15dp"
          android:hint="Continue the Story"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/imageView15">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtInputEditSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="659dp" />
      </com.google.android.material.textfield.TextInputLayout>

      <ImageView
          android:id="@+id/imageView13"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginStart="20dp"
          android:layout_marginTop="8dp"
          app:layout_constraintStart_toEndOf="@+id/txtComments"
          app:layout_constraintTop_toBottomOf="@+id/textView2"
          app:srcCompat="@drawable/likes" />

      <ImageView
          android:id="@+id/imageView12"
          android:layout_width="0dp"
          android:layout_height="200dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="10dp"
          android:layout_marginEnd="16dp"
          android:src="@drawable/read"
          app:circularflow_radiusInDP="12dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/textView2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginTop="12dp"
          android:text="Judul Cerbung"
          android:textAlignment="textStart"
          android:textColor="@color/black"
          android:textSize="16sp"
          android:textStyle="bold"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/imageView12" />

      <TextView
          android:id="@+id/txtComments"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="2dp"
          android:layout_marginTop="8dp"
          android:text="3"
          android:textAlignment="textStart"
          android:textColor="#000000"
          android:textSize="16sp"
          app:layout_constraintStart_toEndOf="@+id/imageView14"
          app:layout_constraintTop_toBottomOf="@+id/textView2" />

      <TextView
          android:id="@+id/txtComments2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="2dp"
          android:layout_marginTop="8dp"
          android:text="3"
          android:textAlignment="textStart"
          android:textColor="#000000"
          android:textSize="16sp"
          app:layout_constraintStart_toEndOf="@+id/imageView13"
          app:layout_constraintTop_toBottomOf="@+id/textView2" />

      <ImageView
          android:id="@+id/imageView14"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="24dp"
          android:layout_marginTop="8dp"
          android:src="@drawable/baseline_format_list_numbered_24"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView2" />

      <TextView
          android:id="@+id/txtCreator"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginTop="4dp"
          android:text="by Username"
          android:textColor="#4E4E4E"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView6" />

      <TextView
          android:id="@+id/txtCreator2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:layout_marginEnd="16dp"
          android:text="dd/mm/yyyy"
          android:textAlignment="textEnd"
          android:textColor="#4E4E4E"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView6" />

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/recyclerView"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/txtCreator" />

      <ImageView
          android:id="@+id/imageView15"
          android:layout_width="350dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="11dp"
          android:src="@drawable/line"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/recyclerView" />

      <TextView
          android:id="@+id/textView6"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:background="#DCCDE7"
          android:backgroundTint="#DCCDE7"
          android:padding="10dp"
          android:paddingLeft="20dp"
          android:paddingRight="20dp"
          android:text="Misteri"
          android:textColor="#000000"
          app:layout_constraintStart_toStartOf="parent"
          tools:layout_editor_absoluteY="284dp" />

      <TextView
          android:id="@+id/textView3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="88dp"
          android:background="#DCCDE7"
          android:backgroundTint="#DCCDE7"
          android:padding="10dp"
          android:paddingLeft="20dp"
          android:paddingRight="20dp"
          android:text="Restricted"
          android:textColor="#000000"
          app:layout_constraintStart_toStartOf="parent"
          tools:layout_editor_absoluteY="284dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>